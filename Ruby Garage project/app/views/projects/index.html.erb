<%= render 'project_modal' %>
<%= render 'task_modal' %>
<%= render 'priority_modal' %>

<div class="row">
  <div id="projects-container" class="col-md-10 col-md-offset-1">

    <% if @projects.any? %>
      <%= render @projects %>
    <% else %>
        <h2 class="text-center projects-placeholder">There's no projects yet, create one.</h2>
    <% end %>

    <div id="addProjectButton" class="text-center">
      <button class="btn btn-default btn-lg blue-gradient-button" type="button" data-toggle="modal" data-target="#addProjectModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Add Project
      </button>
    </div>
  </div>

  
</div>
